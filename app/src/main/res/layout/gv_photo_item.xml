<?xml version="1.0" encoding="utf-8"?>
<com.example.facerecognition.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/main_gridView_item_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:padding="10dp"
        android:scaleType="fitXY" />

    <CheckBox
        android:id="@+id/main_gridView_item_cb"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:background="@drawable/ic_delete"
        android:button="@null" />

</com.example.facerecognition.SquareRelativeLayout>
